<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10">
        <Button
            android:id="@+id/button_up"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="상행버스"
            android:textSize="12sp" />
        <Button
            android:id="@+id/button_down"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="하행버스"
            android:textSize="12sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_arrow_downward_24"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                app:srcCompat="@drawable/ic_baseline_arrow_upward_24"
                tools:ignore="VectorDrawableCompat" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_Stn"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:onClick="mOnClick"
                android:text="부산대역" />

            <Button
                android:id="@+id/button_GA"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:onClick="mOnClick"
                android:text="경암체육관" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_BB"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:onClick="mOnClick"
                android:text="부산은행" />

            <Button
                android:id="@+id/button_MU1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:onClick="mOnClick"
                android:text="음악관" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_FD1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:onClick="mOnClick"
                android:text="부산대정문" />

            <Button
                android:id="@+id/button_AT1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:onClick="mOnClick"
                android:text="미술관" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_HQ1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:onClick="mOnClick"
                android:text="부산대본관" />

            <Button
                android:id="@+id/button_AR1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:onClick="mOnClick"
                android:text="예술관" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_MH1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:onClick="mOnClick"
                android:text="문창회관" />

            <Button
                android:id="@+id/button_CH1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:onClick="mOnClick"
                android:text="화학관" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_SL1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:onClick="mOnClick"
                android:text="새벽벌도서관" />

            <Button
                android:id="@+id/button_SO1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="사회관" />

            <Button
                android:id="@+id/button_LA1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:onClick="mOnClick"
                android:text="법학관" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_span="3"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_24"
                tools:ignore="VectorDrawableCompat"
                android:contentDescription="TODO" />
        </TableRow>


    </TableLayout>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>